<?xml version="1.0" encoding="utf-8"?><!-- START*** Root Container *** -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/txt_med_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/txt_med_agent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/_12sdp" />


        <TextView
            android:id="@+id/txt_med_pack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_green" />

        <TextView
            android:id="@+id/txt_med_indication"
            android:textColor="@color/text_green"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_med_contra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_red" />

        <TextView
            android:id="@+id/txt_med_adult_dose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_med_child_dose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_orange" />

    </LinearLayout>

</android.support.v7.widget.CardView>