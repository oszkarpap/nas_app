<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/row_med_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/txt_med_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/txt_med_agent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/_12sdp" />


        <TextView
            android:id="@+id/txt_med_pack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_green" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_green"
                android:text="I: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_med_indication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_green"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KI: "
                android:textColor="@color/text_red"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_med_contra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_med_adult_dose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GY: "
                android:textColor="@color/text_orange"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_med_child_dose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_orange" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>