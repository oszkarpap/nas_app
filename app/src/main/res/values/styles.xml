<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>

        <item name="windowNoTitle">true</item>


        <item name="android:windowContentTransitions">true</item>
        <item name="android:shape">rectangle</item>

        <item name="android:textColor">@color/bg_color</item>
        <item name="android:textSize">@dimen/_10sdp</item>

    </style>

    <style name="calculator" parent="Base.TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:padding">@dimen/_1sdp</item>
        <item name="android:layout_margin">@dimen/_1sdp</item>
        <item name="android:textColor">@color/text_blue</item>

    </style>

    <style name="AppTheme.NoActionBar.Mainmenu">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:shape">rectangle</item>
        <item name="android:textSize">@dimen/_10sdp</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>


    <style name="Theme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textSize">@dimen/_10sdp</item>

    </style>

    <style name="MyCollapsingToolbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:textSize">@dimen/_10sdp</item>


    </style>


    <style name="LoginStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_10sdp</item>

    </style>


</resources>
